@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Loginsignup.cshtml";
}
@model Event.ViewModals.LoginVM
<div class="container" style="margin-top:70px;">
    <div class="row">
        <div class="col-6 offset-3 border border-primary rounded">
            <div class="text-center">

                <h1>Login</h1>
            </div>
            <h3 class="text-danger text-center">@TempData["Error Message"]</h3>
            <form class="mx-1 mx-md-4" method="post" asp-controller="Home" asp-action="Login">
                <!-- Email input -->
                <div class="form-outline mb-4">
                    <label class="" for="form2Example1">Email address</label>
                    <input type="email" id="form2Example1" name="email" class="form-control" />
                    <span class="text-danger">@TempData["Email"]</span>

                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                    <label class="" for="form2Example2">Password</label>
                    <input type="password" id="form2Example2" name="password" class="form-control" />
                    <span class="text-danger">@TempData["password"]</span>
                </div>

                <!-- 2 column grid layout for inline styling -->
                <div class="row mb-4">
                    <div class="col d-flex justify-content-center">
                        <!-- Checkbox -->
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="Cbox" id="form2Example31" />
                            <label class="form-check-label" asp-for="Cbox"> Remember me</label>
                        </div><br />
                    </div>
                </div>

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4">Log in</button>
                <div class="text-center">
                    <!-- Simple link -->
                    <a href="">Forgot password?</a>
                </div>
                <!-- Register buttons -->
                <div class="text-center">
                    <p>Not a member? <a asp-controller="Home" asp-action="SignUp">Register</a></p>
                </div>
            </form>
        </div>
    </div>
</div>


